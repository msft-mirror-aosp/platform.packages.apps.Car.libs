<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:autoMirrored="true">
    <item android:id="@+id/seekbar_progress_solid"
          android:gravity="center_vertical"
          android:height="@dimen/car_seekbar_slider_height">
        <shape>
            <solid android:color="@color/car_slider_color" />
            <corners android:radius="@dimen/car_seekbar_slider_radius"/>
        </shape>
    </item>
    <item android:id="@+id/seekbar_progress_thumb"
          android:gravity="center_vertical|right"
          android:height="@dimen/car_seekbar_slider_height"
          android:width="@dimen/car_seekbar_slider_height">
        <inset
            android:drawable="@drawable/car_seekbar_slider_icon"/>
    </item>

</layer-list>
