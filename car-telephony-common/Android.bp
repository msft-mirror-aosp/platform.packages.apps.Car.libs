package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

car_telephony_common_static_libs = [
    "androidx.legacy_legacy-support-v4",
    "androidx.lifecycle_lifecycle-common-java8",
    "androidx.lifecycle_lifecycle-extensions",
    "car-apps-common-prebuilt",
    "car-ui-lib",
    "glide-prebuilt",
    "glide-gifdecoder-prebuilt",
    "glide-disklrucache-prebuilt",
    "glide-annotation-and-compiler-prebuilt",
    "guava",
    "hilt_android",
    "androidx.exifinterface_exifinterface",
]

android_library {
    name: "car-telephony-common-source",

    srcs: ["src/**/*.java"],

    resource_dirs: ["res"],

    optimize: {
        enabled: false,
    },

    sdk_version: "system_current",
    min_sdk_version: "31",
    target_sdk_version: "34",
    // b/355695111: Remove this once we drop support for sc-car
    java_version: "1.8", // sc-car only supports up to java 8.

    static_libs: car_telephony_common_static_libs,
    libs: ["android.car-system-stubs"],
}

java_genrule {
    name: "car-telephony-common-aar",
    srcs: [
        ":car-telephony-common-source{.aar}",
        "res/**/*",
    ],
    out: ["car-telephony-common.aar"],
    tools: [
        "make_slim_aar",
    ],
    cmd: "dir=packages/apps/Car/libs/car-telephony-common && " +
        "$(location make_slim_aar) --classes-allowlist com/android/car/telephony $(out) " +
        "$(location :car-telephony-common-source{.aar}) $$dir/res",
    dist: {
        targets: ["car-telephony-common-aar",]
    },
}

android_library_import {
    name: "car-telephony-common-prebuilt",
    aars: [":car-telephony-common-aar"],
    sdk_version: "current",
    static_libs: car_telephony_common_static_libs,
}
