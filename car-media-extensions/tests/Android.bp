package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

//App only for testing.
android_app {
    name: "CarMediaExtensionsAppForTesting",

    required: ["allowed_privapp_com.android.car.media"],

    platform_apis: true,

    certificate: ":com-android-car-apps-test",

    privileged: true,

    optimize: {
        enabled: false,
    },

    dex_preopt: {
        enabled: false,
    },

    libs: [
        "android.test.runner",
        "android.test.base",
        "android.car-stubs",
        "android.car-system-stubs",
        "android.test.mock.stubs",
    ],

    static_libs: [
        "car-media-extensions-prebuilt",
    ],

    // runtime cc library which is used by mockito-target-extended.
    jni_libs: [
        // For mockito extended
        "libdexmakerjvmtiagent",
        "libstaticjvmtiagent",
    ],

    // Enforce the jni libraries to be grouped into the APK file.
    use_embedded_native_libs: true,
}

//############################################################
// Car Media Extensions unit test target, run with:
// mmma -j64 packages/apps/Car/libs/car-media-extensions
// atest CarMediaExtensionsTests
//############################################################
android_test {
    name: "CarMediaExtensionsTests",

    platform_apis: true,

    certificate: ":com-android-car-apps-test",

    privileged: true,

    min_sdk_version: "30",
    target_sdk_version: "31",
    sdk_version: "system_current",

    manifest: "AndroidManifest.xml",
    srcs: ["src/**/*.java"],

    // Include the testing libraries
    static_libs: [
        "androidx.test.core",
        "androidx.test.rules",
        "androidx.test.runner",
        "androidx.test.ext.junit",
        "androidx.test.espresso.core",
        "androidx.test.espresso.contrib",
        "androidx.test.espresso.intents",
        "hamcrest-library",
        "mockito-target-inline-minus-junit4",
        "platform-test-annotations",
        "truth-prebuilt",
    ],
    test_suites: ["automotive-general-tests"],

    instrumentation_for: "CarMediaExtensionsAppForTesting",
}