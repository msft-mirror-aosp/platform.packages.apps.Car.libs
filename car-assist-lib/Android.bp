package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

car_assist_lib_static_libs = [
    // ensure unbundled
    "car-messaging-models-prebuilt",
    "androidx.legacy_legacy-support-v4",
    "androidx.annotation_annotation",
]

android_library {
    name: "car-assist-lib-source",

    srcs: ["src/**/*.java"],

    optimize: {
        enabled: false,
    },

    sdk_version: "current",
    // sc-car only supports up to java 8.
    java_version: "1.8",

    min_sdk_version: "28",

    target_sdk_version: "34",

    static_libs: car_assist_lib_static_libs,
}

java_genrule {
    name: "car-assist-lib-aar",
    srcs: [
        ":car-assist-lib-source{.aar}",
        "res/**/*",
    ],
    out: ["car-assist-lib.aar"],
    tools: [
        "make_slim_aar",
    ],
    cmd: "dir=packages/apps/Car/libs/car-assist-lib && " +
        "$(location make_slim_aar) --classes-allowlist com/android/car/assist $(out) " +
        "$(location :car-assist-lib-source{.aar})",
    dist: {
        targets: ["car-assist-lib-aar",]
    },
}

android_library_import {
    name: "car-assist-lib-prebuilt",
    aars: [":car-assist-lib-aar"],
    sdk_version: "current",
    static_libs: car_assist_lib_static_libs,
}
