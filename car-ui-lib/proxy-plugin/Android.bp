package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

android_app {
    name: "car-ui-lib-proxyplugin",
    min_sdk_version: "28",
    target_sdk_version: "current",
    // sc-car only supports up to java 8.
    java_version: "1.8",

    aaptflags: ["--shared-lib"],
    sdk_version: "current",

    manifest: "plugin/src/main/AndroidManifest.xml",
    srcs: ["plugin/src/main/java/**/*.java"],
    libs: [
        "android.car-stubs",
    ],
    // optimize false is needed in order to prevent R.java class from being
    // stripped out.
    optimize: {
            enabled: false,
    },
    static_libs: [
        "androidx.annotation_annotation",
        "car-ui-lib-source",
        "car-ui-lib-oem-apis",
    ],
}
