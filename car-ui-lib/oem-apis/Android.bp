package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

java_library {
    name: "car-ui-lib-oem-apis-source",

    min_sdk_version: "28",
    target_sdk_version: "current",
    sdk_version: "current",
    // b/355695111: Remove this once we drop support for sc-car
    java_version: "1.8", // sc-car only supports up to java 8.

    srcs: ["src/main/java/**/*.java"],

    optimize: {
        enabled: false,
    },

    apex_available: [
        "com.android.permission",
        "//apex_available:platform",
    ],
    static_libs: [
        // NOTE: DO NOT ADD ANY OTHER DEPENDENCIES HERE.
        // Adding dependencies here can cause library version conflicts at runtime
        // if both the app and the plugin are depending on the same library but with
        // different versions.
        "androidx.annotation_annotation",
    ],
    is_stubs_module: true,
}
