<com.android.car.ui.FocusArea
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/transparent_activity_border"
        android:padding="@dimen/transparent_activity_margin">
        <Button
            android:id="@+id/show_app_styled_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Show App Styled View on transparent activity"
            android:backgroundTint="@color/dialog_activity_background_color"
            android:layout_marginBottom="@dimen/transparent_activity_margin"/>
        <Button
            android:id="@+id/close_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Close transparent Activity"
            android:backgroundTint="@color/dialog_activity_background_color"/>
    </LinearLayout>
</com.android.car.ui.FocusArea>
