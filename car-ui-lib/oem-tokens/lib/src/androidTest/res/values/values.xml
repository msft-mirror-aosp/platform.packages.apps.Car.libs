<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="TestTokenTheme" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="oemTokenOverrideEnabled">true</item>
        <item name="oemColorPrimary">@android:color/holo_blue_dark</item>
        <item name="oemColorOnPrimary">@android:color/holo_blue_dark</item>
        <item name="oemColorPrimaryContainer">@android:color/holo_blue_dark</item>
        <item name="oemColorOnPrimaryContainer">@android:color/holo_blue_dark</item>
        <item name="oemColorSecondary">@android:color/holo_blue_dark</item>
        <item name="oemColorOnSecondary">@android:color/holo_blue_dark</item>
        <item name="oemColorSecondaryContainer">@android:color/holo_blue_dark</item>
        <item name="oemColorOnSecondaryContainer">@android:color/holo_blue_dark</item>
        <item name="oemColorTertiary">@android:color/holo_blue_dark</item>
        <item name="oemColorOnTertiary">@android:color/holo_blue_dark</item>
        <item name="oemColorTertiaryContainer">@android:color/holo_blue_dark</item>
        <item name="oemColorOnTertiaryContainer">@android:color/holo_blue_dark</item>
    </style>

    <style name="TestTokenTheme.NoOverride">
        <item name="oemTokenOverrideEnabled">false</item>
    </style>

    <bool name="enable_oem_tokens">true</bool>

    <attr name="testColorPrimary" format="color"/>
    <attr name="testTextAppearanceDisplayLarge" format="reference"/>
    <attr name="testShapeCornerLarge" format="dimension"/>

    <style name="OemStyle">
        <item name="com.android.oem.tokens:colorPrimary">?testColorPrimary</item>
        <item name="testColorPrimary">@android:color/holo_green_dark</item>
        <item name="com.android.oem.tokens:textAppearanceDisplayLarge">?testTextAppearanceDisplayLarge</item>
        <item name="testTextAppearanceDisplayLarge">@style/FakeTextAppearance</item>
        <item name="com.android.oem.tokens:shapeCornerLarge">?testShapeCornerLarge</item>
        <item name="testShapeCornerLarge">@dimen/fake_corner</item>
    </style>

    <style name="FakeTextAppearance">
    </style>

    <dimen name="fake_corner">10dp</dimen>
</resources>

